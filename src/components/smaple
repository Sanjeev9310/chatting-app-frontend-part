 <div className='flex flex-col md:flex-row w-full h-screen md:h-[100svh] overflow-hidden mt-1'>
      
      {/* Chat List - Left Side */}
      <div className={`
        ${showChats ? 'block' : 'hidden'}
        md:block md:w-1/3 lg:w-1/4
        h-[50vh] md:h-full
        overflow-auto
        border-r border-gray-200
      `}>
        <div className="p-4">
          <h2 className="text-xl font-bold mb-4">Chats</h2>
          {/* Your chat list items */}
          <div 
            className="p-3 mb-2 bg-gray-100 rounded cursor-pointer hover:bg-gray-200"
            onClick={() => {
              // When clicking a chat on mobile, switch to message view
              if (isMobile) {
                setShowChats(false);
              }
            }}
          >
            sample group
          </div>
          <div 
            className="p-3 mb-2 bg-gray-100 rounded cursor-pointer hover:bg-gray-200"
            onClick={() => isMobile && setShowChats(false)}
          >
            1234455
          </div>
          {/* More chat items */}
        </div>
      </div>
      
      {/* Message Area - Right Side */}
      <div className={`
        ${!showChats ? 'block' : 'hidden'}
        md:block md:w-2/3 lg:w-3/4
        h-[50vh] md:h-full
        overflow-auto
      `}>
        
        {/* Mobile Back Button */}
        {!showChats && isMobile && (
          <button
            onClick={() => setShowChats(true)}
            className="md:hidden p-4 border-b w-full text-left flex items-center hover:bg-gray-50"
          >
            <svg className="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M15 19l-7-7 7-7" />
            </svg>
            Back to Chats
          </button>
        )}
        
        {/* Message Content */}
        <div className="p-4 h-full">
          {currentChat ? (
            // Your MessageModal component
            <div>Message content here...</div>
          ) : (
            <div className="h-full flex flex-col items-center justify-center text-gray-500">
              <div className="text-2xl mb-4">ðŸ’¬</div>
              <div className="text-lg">Select a chat to start messaging</div>
            </div>
          )}
        </div>
      </div>
    </div>
  );
}